[client]

default-character-set = utf8mb4


[mysqld]

port        = 3306
log-error	= /var/log/mysql/error.log
user        = mysql
character-set-server = utf8mb4
max_connect_errors = 100

#####################
# 慢查询（slow query）#
#####################

# 1 开启
slow_query_log = 0
# 超过多少秒
long_query_time = 1
# 记录的文件
slow_query_log_file = /var/log/mysql/mysql-slow.log



